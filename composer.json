{
    "name": "datalogix/laravel-tailwind-components",
    "description": "A set of Blade components to rapidly build elements with Tailwind CSS.",
    "keywords": [
        "laravel",
        "tailwind",
        "components"
    ],
    "homepage": "https://github.com/datalogix/laravel-tailwind-components",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Ricardo Gobbo de Souza",
            "email": "ricardogobbosouza@yahoo.com.br"
        }
    ],
    "require": {
        "php": "^7.2.5|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "illuminate/view": "^7.12|^8.0"
    },
    "require-dev": {
        "livewire/livewire": "^1.3|^2.0",
        "orchestra/testbench-browser-kit": "^5.0|^6.0",
        "phpunit/phpunit": "^8.5|^9.0",
        "spatie/laravel-translatable": "^4.0",
        "spatie/phpunit-watcher": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Datalogix\\TailwindComponents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Datalogix\\TailwindComponents\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Datalogix\\TailwindComponents\\TailwindComponentsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "watch": "vendor/bin/phpunit-watcher watch"
    }
}
